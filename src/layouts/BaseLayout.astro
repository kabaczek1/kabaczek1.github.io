---
import "../styles/global.css";

import SmallScreen from "../components/SmallScreen.astro";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { title, back_href, back_title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" href="/favicon/favicon.ico" sizes="32x32" />
    <link rel="image/png" href="/favicon/favicon_16.png" sizes="16x16" />
    <link rel="image/png" href="/favicon/favicon_32.png" sizes="32x32" />
    <link rel="image/png" href="/favicon/favicon_48.png" sizes="48x48" />
    <link rel="icon" href="/favicon/favicon.svg" type="image/svg+xml" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{`${title} | Kabaczek.me`}</title>
  </head>
  <body class="min-h-svh">
    <div class="min-w-[360px] max-w-[804px] mx-auto min-h-svh flex flex-col">
      <Header back_href={back_href} back_title={back_title} />

      <main class="grow mb-4 sm:mb-6 md:mb-10 lg:mb-14">
        <slot />
      </main>

      <Footer show_button_text="sm" />
    </div>
    <SmallScreen />
  </body>
</html>
